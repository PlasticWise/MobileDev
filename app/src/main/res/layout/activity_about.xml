<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="@android:color/black">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="0dp"
                android:text="About"
                android:fontFamily="@font/inter_bold"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_logogreen" />

            <TextView
                android:id="@+id/brandName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/aboutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="PlasticWise is an Android-based application for detecting plastic waste and providing recommendations for waste processing that can be carried out. This application was created by the following Bangkit Academy students:"
                android:textColor="@color/greenPrimary"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/developers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="1. (ML) M006D4KX2283 – Rafidah Rasyid – Universitas Brawijaya\n2. (ML) M004D4KY2743 – Javier Janeti Surpantyo – Institut Teknologi Sepuluh Nopember\n3. (ML) M009D4KY3262 – Wardiansyah Fauzi Abdillah – Universitas Gunadarma\n4. (CC) C004D4KX0371 – Khalisha Dzakira Hidayat – Institut Teknologi Sepuluh Nopember\n5. (CC) C009D4KY0692 – Mohammad Fierza Heikal Firdaus – Universitas Gunadarma – [Active]\n6. (MD) A129D4KY0440 – Zhaqian Ro'uf Alfauzi – Politeknik Negeri Jember\n7. (MD) A009D4KY4494 – Haikal Abizar – Universitas Gunadarma"
                android:textColor="@color/greenPrimary"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/logoKampusMerdeka"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/kampus_merdeka_logo"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/logoBangkit"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bangkit_logo"
                    android:layout_marginStart="8dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>